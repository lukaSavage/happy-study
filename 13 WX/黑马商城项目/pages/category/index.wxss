page {
  height: 100%;
}
page .category {
  height: 100%;
}
page .category .category-body {
  height: calc(100vh - 110rpx);
  display: flex;
}
page .category .category-body .left-scroll {
  height: 100%;
  flex: 2;
}
page .category .category-body .left-scroll view {
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  border-bottom: 1px solid #f7f7f7;
}
page .category .category-body .left-scroll view.active {
  color: #f00;
}
page .category .category-body .right-scroll {
  height: 100%;
  flex: 5;
}
page .category .category-body .right-scroll .right-title {
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}
page .category .category-body .right-scroll .right-body {
  display: flex;
  flex-wrap: wrap;
}
page .category .category-body .right-scroll .right-body navigator {
  width: 33.33%;
  text-align: center;
}
page .category .category-body .right-scroll .right-body navigator image {
  width: 50%;
}
